<Window x:Class="conwayWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:conwayWPF"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" WindowStartupLocation="CenterScreen"
        KeyDown="ToucheAppuyage" KeyUp="ToucheRelachage" MouseMove="MouvementSouris"
        MouseLeftButtonDown="ClickGaucheBas" MouseLeftButtonUp="ClickGaucheHaut" MouseWheel="ScrollMolette">
    <Grid>
      <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="auto"/>
      </Grid.RowDefinitions>
      <Canvas Grid.Row="0"  x:Name="matoile" Width="1534" Height="786" Background="Green" ClipToBounds="True">
      </Canvas>
      <TextBlock Grid.Row="0" x:Name="tartiflette" Width="200" Height="200" Background="Gray" Foreground="White"
                 HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10, 10" Visibility="Collapsed"/>
      <TextBlock Grid.Row="1" x:Name="choupinette" Background="MidnightBlue" Foreground="Lime" Padding="20, 0"/>
    </Grid>

</Window>

